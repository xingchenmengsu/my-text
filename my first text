		{
			i = 1;//i是密码循环的控制条件
			printf("请重新输入密码\n");
			scanf_s("%d", &password);
			if (password == 123456) {
				printf("密码正确\n");
				i = 5;
			}
			if (password != 123456) {
				printf("密码错误\n这是您的最后一次机会\n");
				printf("请您输入正确的密码\n");
				scanf_s("%d", &password);
				if (password != 123456) {
					return 0;
				}
				else
				{
					i=5;
				}
			}
		} while (i<=3);
