	{
		if (b == 1) {//b作为主要选择条件
			i=2;
			printf("请输入存款金额\n");
			scanf_s("%lf", &d);
			money = money + d;
			printf("您的存款金额为%lf", money);
			system("pause");
			printf("请再次选择你的操作");
			scanf_s("%d", &b);
			i++;
		}
		if (b == 2) {
			i = 3;
			printf("请输入取款金额\n");
			scanf_s("%lf", &d);
			if (d > money) {
				printf("您的存款不足以取出这么多的金额\n");
				continue;
			}
			money = money - d;
			printf("您的最终余额为%lf\n", money);
			printf("请再次选择你的操作\n");
			scanf_s("%d", &b);
			i++;
