	} while (i<= 100);
	printf("感谢您使用本程序，祝您生活愉快\n");
	if (money > 10000) {
		printf("我们诚邀您对我们的系统进行评分\n");
		printf("请用1—10来描述您对这个系统的满意程度\n10代表十分满意，9代表很满意，8代表满意，7分及以下分数表示不满意\n");
		printf("您对我们的评分表达了该制作人员工作的努力程度，请您慎重评分\n");
		scanf_s("%d", &i);
		printf("感谢您的配合，祝您生活愉快\n");
	}
	system("pause");
	return 0;
}
int max(int x, int y)
{
	int z;
	if (x > y ) z = x;
	else z = y;
	return z;
}
