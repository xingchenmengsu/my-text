					printf("请输入你的出生月份\n"); scanf_s("%d", &u);
					printf("请输入你的手机尾号\n"); scanf_s("%d", &p);
					printf("请输入你的出生日期\n"); scanf_s("%d", &o);
					if (u == 1)printf("蹲草丛"); if (u == 2)printf("开大"); if (u == 3)printf("猥琐");
					if (u == 4)printf("跳着舞"); if (u == 5)printf("开着车"); if (u == 6)printf("站泉水");
					if (u == 7)printf("躺着"); if (u == 8)printf("暗中"); if (u == 9)printf("跳起来");
					if (u == 10)printf("打野"); if (u == 11)printf("越塔"); if (u == 12)printf("团战");
					if (p == 1)printf("超神的"); if (p == 2)printf("巨坑的"); if (p == 3)printf("带不动的");
					if (p == 4)printf("带妹的"); if (p == 5)printf("被秒的"); if (p == 6)printf("挂机的");
					if (p == 7)printf("带线的"); if (p == 8)printf("五杀的"); if (p == 9)printf("抢人头的");
					if (p == 0)printf("卖队友的");
					if (o == 1)printf("后裔\n"); if (o == 2)printf("鲁班七号\n"); if (o == 3)printf("大乔\n"); if (o == 4)printf("小乔\n");
					if (o == 5)printf("东皇太一\n"); if (o == 6)printf("黄忠\n"); if (o == 7)printf("芈月\n"); if (o == 8)printf("诸葛亮");
					if (o == 9)printf("安琪拉\n"); if (o == 10)printf("不知火舞\n"); if (o == 11)printf("高渐离\n"); if (o == 12)printf("孙尚香\n");
					if (o == 13)printf("韩信\n"); if (o == 14)printf("妲己\n"); if (o == 15)printf("李元芳\n"); if (o == 16)printf("蔡文姬\n");
					if (o == 17)printf("亚瑟\n"); if (o == 18)printf("庄周\n"); if (o == 19)printf("甄姬\n"); if (o == 20)printf("露娜\n");
					if (o == 21)printf("李白\n"); if (o == 22)printf("狄仁杰\n"); if (o == 23)printf("孙悟空\n"); if (o == 24)printf("程咬金\n");
					if (o == 25)printf("宫本武藏\n"); if (o == 26)printf("王昭君\n"); if (o == 27)printf("兰陵王\n"); if (o == 28)printf("花木兰\n");
					if (o == 29)printf("老夫子\n"); if (o == 30)printf("张飞\n"); if (o == 31)printf("凯\n");	
			}i = 5;
				printf("请输入有效选择条件\n");
				scanf_s("%d", &b); break;
			case 2: {//程序的问题已经得到解决，现在程序中只需要按照u==1的模式进行填充。暂时没有发现其他问题
				//时间2018年4月16日，21：27.
					printf("诗歌会\n在此次选择中，请选择你喜欢的诗人，并根据你选择的诗人做一次小小的测验。\n");
					printf("1:李白\t2：贺知章\t3：董永\t4：苏轼\t\n选择你喜欢的诗人：\n");
					scanf_s("%d", &u);
					if (u == 1) {
						printf("你选择的诗人是李白，现在做一个小小的测验\n根据下文选择正确的上文\n");
						printf("…………，里中有三墓，累累正相似。《梁甫吟》\n");
						printf("1:步出齐城门，遥望荡阴里。\n2：问是谁家墓，田疆古冶子。\n3：一朝被谗言，二桃杀三士\n4：谁能为此谋，国相齐晏子\n");
						printf("请选择你的答案\n");	//选择答案
						scanf_s("%d", &p);
						if (p == 1)
							printf("你选择的答案十分的正确，继续加油");
						else printf("答案错误，请你继续努力");
					}
					if (u == 2) {
						printf("你好，你选择的诗人是：贺知章，现在做一个小小的测验。\n");
						printf(" shige ");
						scanf_s("%d", &p);
						if (p == 1)printf("你的答案正确。");
						else printf("你的答案错误，请认真思考。\n");
					}
					if (u == 3) {
						printf("你选择的诗人是：董永。现在进行一个小小的测验\n");
						printf(" shige  ");
						printf("请选择你的答案\n");
						scanf_s("%d", &p);
						if (p == 2)printf(" 你的答案正确。 ");
						else  printf("你的答案错误，请认真思考。\n");
					}
					if (u == 4) {
						printf("你选择的诗人是：苏轼。现在进行一个小小的测验\n");
						printf(" shige  ");
						printf("请选择你的答案\n");
						scanf_s("%d", &p);
						if (p == 2)printf(" 你的答案正确。 ");
						else  printf("你的答案错误，请认真思考。\n");
					}
				}i = 5;
				printf("请输入有效选择条件\n");
				scanf_s("%d", &b); break;
			default: printf("输入有效信息\n");break;
			}
