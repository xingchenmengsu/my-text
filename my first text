#include<stdio.h>
#include<stdlib.h>
#include<math.h>
#include<conio.h>
int main()
{
	system("color f1");// 0 = 黑色
	//8 = 灰色1 = 蓝色  A = 淡绿色 3 = 湖蓝色  B = 淡浅绿色  4 = 红色   C = 淡红色  5 = 紫色 
	//	9 = 淡蓝色 2 = 绿色    D = 淡紫色 6 = 黄色   E = 淡黄色   7 = 白色    F = 亮白色
	int max(int x, int y);
