			b1 = 0.015, c1 = 0.021, d1 = 0.0275, e1 = 0.03, f1 = 0.00035;
			double *cause1=&w1, *cause2 = &w2, *cause3=&w3, *cause4=&w4, *cause5=&w5;
			if (c == 1 || c == 6)//c作为存款利率的控制条件，w作为存款的输出控件
			{
				w1= money * (1 + e1);
				printf("使用方案一所得金额为%lf\n",w1);
				system("pause");
			}
			if (c == 2 || c == 6)
			{
				w2 = money * (1 + 2 * c1);
				w2 = w2 * (1 + 3 * d1);
				printf("使用方案二所得金额为%lf\n", w2);
				system("pause");
			}
			if (c == 3 || c == 6)
			{
				w3 = money * (1 + 3 * d1);
				w3 = w3 * (1 + 2 * c1);
				printf("使用方案三所得金额为%lf\n", w3);
				system("pause");
			}
			if (c == 4 || c == 6)
			{
				w4 = money * pow((1 + b1), 5);
				printf("使用方案四所得金额为%lf\n", w4);
				system("pause");
			}
			if (c == 5 || c == 6)
			{
				w5 = money* pow((1 + f1 / 5), 20);
				printf("使用方案五所得金额为%lf\n", w5);
				system("pause");
			}
			if (c == 6) {
				w0 = max(max(max(max(*cause1, *cause2), *cause3), *cause4), *cause5);
				printf("经过系统选择，我们为您推荐金额为   %lf 的方案\n",w0);
